{
  "name": "linq-resy-agent",
  "version": "1.0.0",
  "description": "A Resy reservation agent accessible via iMessage. Built on Linq Blue and Claude.",
  "type": "module",
  "main": "dist/index.js",
  "author": "Linq Technologies Incorporated",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/linq-team/linq-resy-agent.git"
  },
  "keywords": [
    "linq",
    "resy",
    "reservations",
    "restaurants",
    "imessage",
    "claude",
    "anthropic",
    "ai-agent",
    "typescript"
  ],
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "build:lambda": "node esbuild.config.mjs",
    "build:layer": "bash scripts/build-layer.sh",
    "build:all": "npm run build:lambda && npm run build:layer",
    "start": "node dist/index.js",
    "deploy": "npm run build:all && cd infra && sam deploy",
    "deploy:guided": "npm run build:all && cd infra && sam deploy --guided",
    "logs": "bash scripts/logs.sh processor",
    "logs:receiver": "bash scripts/logs.sh receiver",
    "logs:both": "bash scripts/logs.sh both",
    "logs:errors": "bash scripts/logs.sh errors",
    "logs:recent": "bash scripts/logs.sh recent",
    "logs:search": "bash scripts/logs.sh search",
    "dashboard": "tsx src/dashboard.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@aws-sdk/client-dynamodb": "^3.700.0",
    "@aws-sdk/client-sqs": "^3.700.0",
    "@aws-sdk/lib-dynamodb": "^3.700.0",
    "dotenv": "^17.2.3",
    "express": "^4.21.0"
  },
  "devDependencies": {
    "@aws-sdk/client-cloudwatch-logs": "^3.996.0",
    "@types/aws-lambda": "^8.10.145",
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "esbuild": "^0.25.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vitest": "^4.0.18"
  }
}
